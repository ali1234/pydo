from pydo import *

# Doing the following would shadow this_module().enabled because it is a
# descriptor. To prevent that, a SyntaxError will be raised.
#enabled = True

# This is the correct way to do it. Since enabled is a descriptor, this will
# verify that the value assigned is Bool.
this_module().enabled = True

# This is an error because enabled must be Bool.
#this_module().enabled = 123

@command
def usercommand():
    print('This is a user command in module:', this_module().friendly_name)

@command
def build():
    print('Buildyo')